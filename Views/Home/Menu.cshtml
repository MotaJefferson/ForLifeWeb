@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="fundo">

    <main>

        <h1 class="mt-5 mb-5 text-left fw-bold px-lg-5 ms-5 subtitulo">
            <span class="titulo_inicio">FOR</span><span class="titulo_meio">LI</span><span class="titulo_fim">FE</span>
        </h1>

        <div class="pt-2">
            <!--Container (painel verde)-->
            <div class="container-sm px-4 px-lg-5  text-center verde-transparente_titulo w-75">

                <div class="col-md text-center ">
                    <div class="form-floating ">
                        <h2 class=" texto_padrao fs-4 ">MENU PRINCIPAL</h2>
                    </div>
                </div>

            </div>
            <div class="container-sm px-4 px-lg-5  text-center verde-transparente w-75 border rounded shadow py-5">

                <div class="row">

                    <div class="col-md text-center">
                        <div class="form-floating mb-5 ">
                            <h2 class=" texto_padrao fs-3"></h2>
                        </div>
                    </div>

                </div>

                <div class="row">

                    <!--Botão (Anchor) para direcionar a tela vendas-->
                    <div class="col-md-3 col-12">
                        <div class="form-floating mb-2">
                            <a asp-controller="Venda" asp-action="Index" class="btn btn-success btn-lg text-center rounded-pill mb-3">
                                <i class="bi bi-currency-dollar fs-2 px-4"></i>
                            </a>
                            <div class="form-floating mb-4">
                                <h6 class="text-success fw-bold">VENDAS</h6>
                            </div>
                        </div>
                    </div>

                    <!--Botão (Anchor) para direcionar a tela plantio-->
                    <div class="col-md-3 col-12">
                        <div class="form-floating mb-4">
                            <a asp-controller="Plantio" asp-action="Index" class="btn btn-success btn-lg text-center rounded-pill mb-3">
                                <i class="bi bi-tree-fill fs-2 px-4"></i>
                            </a>
                            <div class="form-floating mb-2">
                                <h6 class="text-success fw-bold">PLANTIO</h6>
                            </div>
                        </div>
                    </div>

                    <!--Botão (Anchor) para direcionar a tela estoque_produto-->
                    <div class="col-md-3 col-12 ">
                        <div class="form-floating mb-2 ">
                            <a asp-controller="ProdutoEstoque" asp-action="Index" class="btn btn-success btn-lg text-center rounded-pill mb-3">
                                <i class="bi bi-box-seam-fill fs-2 px-4"></i>
                            </a>
                            <div class="form-floating mb-4">
                                <h6 class="text-success fw-bold">ESTOQUE</br> PRODUTO</h6>
                            </div>
                        </div>
                    </div>

                    <!--Botão (Anchor) para direcionar a tela estoque_insumo-->
                    <div class="col-md-3 col-12">
                        <div class="form-floating mb-2">
                            <a asp-controller="InsumoEstoque" asp-action="Index" class="btn btn-success btn-lg text-center rounded-pill mb-3">
                                <i class="bi bi-box-seam fs-2 px-4"></i>
                            </a>
                            <div class="form-floating mb-4">
                                <h6 class="text-success fw-bold">ESTOQUE</br> INSUMO</h6>
                            </div>
                        </div>
                    </div>



                </div>

            </div>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

    </main>

</body>


</html>
