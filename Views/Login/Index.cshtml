@model ForLifeWeb.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href=/assets/logo_forlife.png type="image/x-icon">
    <title>Login</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/pages/login.css">
</head>

<body class="fundo_escuro">

    <nav class="navbar navbar-expand-md bg-success bg-success-rgb navbar-dark">

        <div class="container-fluid">

            <a class="navbar-brand fw-bold" href="#">FORLIFE</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 px-md-5">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="#">VENDAS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">PLANTIO</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            ESTOQUE
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item " href="#">Produto</a></li>
                            <li><a class="dropdown-item " href="#">Insumo</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item " href="cadastro_produto.html">Cadastro Produto</a></li>
                            <li><a class="dropdown-item" href="#">Cadastro Insumo</a></li>

                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            CADASTRO
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item " href="#">Cliente</a></li>
                            <li><a class="dropdown-item " href="#">Fornecedor</a></li>
                            <li><a class="dropdown-item " href="cadastro_usuario.html">Usuário</a></li>


                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="confirmLogout(event)">SAIR</a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-5 ">
        <div class="row align-items-center">
            <div class="coll-md-10 mx-auto col-lg-5">

                <!--Título FORLIFE-->
                <h2 class="titulo"><span class="titulo_inicio">FOR</span><span class="titulo_meio">LI</span><span
                class="titulo_fim">FE</span></h2>

                <form class="p-4 p-md-5  ">

                    @using (Html.BeginForm("Validar", "Login", FormMethod.Post))
                    {
                        <!--Campo de login-->
                        <div class="form-floating mb-3 mt-2">
                            @Html.TextBoxFor(model => model.cod_usuario, new { @class = "form-control", placeholder = "Login do Usuário", id = "usuario_telaLogin" })
                            <label for="usuario_telaLogin">Usuário</label>

                        </div>

                        <!--Campo de senha-->
                        <div class="form-floating  mb-5 mt-2">
                            @Html.PasswordFor(model => model.senha, new { @class = "form-control", placeholder = "Senha", id = "floatingPassword" })
                            <label for="floatingPassword">Senha</label>

                        </div>

                        <button type="submit" class=" w-100 btn btn-success">LOGAR</button>

                        @if(ViewBag.ErrorMessage != null)
                        {
                            <p class="text-danger mt-3">@ViewBag.ErrorMessage</p>
                        }
                    }
                </form>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

    <script>
        function confirmLogout(event) {
            // Previne o comportamento padrão do link
            event.preventDefault();

            // Exibe a mensagem de confirmação
            const userConfirmed = confirm("Tem certeza que deseja sair?");

            // Se o usuário confirmar, redireciona para a página de logout
            if (userConfirmed) {
                window.location.href = "/logout"; // Altere "/logout" para a rota desejada
            }
        }
    </script>
</body>

</html>