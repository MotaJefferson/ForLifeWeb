@model ForLifeWeb.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/pages/login.css">

</head>

@using (Html.BeginForm("Validar", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <body class="fundo">

        <nav class="navbar navbar-expand-md bg-success bg-success-rgb navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">FORLIFE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">QUEM SOMOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">CONTATO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="login.html">LOGIN</a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>

        <div class="container mt-5 ">
            <div class="row align-items-center">
                <div class="coll-md-10 mx-auto col-lg-5">
                    <h2 class="titulo"><span class="titulo_inicio">FOR</span><span class="titulo_meio">LI</span><span class="titulo_fim">FE</span></h2>
                    <form class="p-4 p-md-5  ">

                        <div class="form-floating mb-3 mt-2">
                            <input asp-for="cod_usuario" class="form-control" id="usuario_telaLogin" placeholder="Login do Usuario">
                            <label for="usuario_telaLogin">Usuário </label>
                            @Html.ValidationMessage("CodUsuario", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-floating  mb-3">
                            <input asp-for="senha" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Senha</label>
                            @Html.ValidationMessage("Senha", "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class=" w-100 btn btn-success">LOGAR</button>

                        <!-- Mensagem de erro ou sucesso centralizada na tela -->
                        @if (TempData["Erro"] != null)
                        {
                            <div class="alert alert-danger text-center mt-3" role="alert">
                                @TempData["Erro"]
                            </div>
                        }

                        @if (TempData["Mensagem"] != null)
                        {
                            <div class="alert alert-success text-center mt-3" role="alert">
                                @TempData["Mensagem"]
                            </div>
                        }

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="text-danger">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        }

                    </form>
                </div>
            </div>
        </div>

    </body>


}                        

</html>