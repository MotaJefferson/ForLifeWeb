<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ForLifeWeb</title>
    <meta name="robots" content="index,follow">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/assets/logo_forlife.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/estilo.css">

</head>
<body>     
    <div>

        <!-- Início da barra de menu -->
        <nav class="navbar navbar-expand-md bg-success bg-success-rgb navbar-dark">

            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index" >FORLIFE</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 px-md-5">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Venda" asp-action="Index">VENDAS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Plantio" asp-action="Index">PLANTIO</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                ESTOQUE
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item " asp-controller="Produto" asp-action="Index">Produto</a></li>
                                <li><a class="dropdown-item " asp-controller="Insumo" asp-action="Index">Insumo</a></li>
                                <li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                PERFIS
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Cliente" asp-action="Index">Cliente</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Fornecedor" asp-action="Index">Fornecedor</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuario" asp-action="Index">Usuário</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                CADASTRO
                            </a>
                            <ul class="dropdown-menu">

                                <li><a class="dropdown-item " asp-controller="Produto" asp-action="Create">Produto</a></li>
                                <li><a class="dropdown-item " asp-controller="Insumo" asp-action="Create">Insumo</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                <li>
                                    <a class="dropdown-item" asp-controller="Cliente" asp-action="Create">Cliente</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Fornecedor" asp-action="Create">Fornecedor</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuario" asp-action="Create">Usuário</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="confirmLogout(event)">SAIR <i class="bi bi-power"></i></a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>
        <!-- Fim da barra de menu -->

        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js"></script>
    @RenderSection("js", required: false)

</body>
</html>
